<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_history_file_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"/>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            >
            <TextView
                android:id="@+id/tv_history_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="#cc000000"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_history_file_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_history_file_name"
                android:textColor="#66000000"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/tv_history_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_history_file_name"
                android:layout_toRightOf="@+id/tv_history_file_time"
                android:textColor="#66000000"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:layout_marginTop="6dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_history_file_state_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="@string/file_aready_cancel"
            android:textSize="12sp"
            android:textColor="#80000000"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_history_file_state_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="@string/file_transfer_fail"
            android:textSize="12sp"
            android:textColor="#ff0000"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/tv_history_file_state_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@drawable/send_success"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

<!--    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="64dp"
        android:visibility="gone"
        android:background="#d7d7d7"/>-->

</LinearLayout>
