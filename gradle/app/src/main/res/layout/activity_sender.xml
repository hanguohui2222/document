<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gionee="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="53dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/searching_wait_connect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:gravity="center_horizontal"
        android:text="@string/waiting_connect"
        android:textColor="#cc000000"
        android:textSize="16sp" />

    <com.gionee.hotspottransmission.animation.RippleLayout
        android:id="@+id/ripple_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        gionee:colors="#ffbc66"
        gionee:duration="3000"
        gionee:radius="35dp"
        gionee:rippleNums="4"
        gionee:scale="4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/receiver_search_bg" />
    </com.gionee.hotspottransmission.animation.RippleLayout>
    <TextView
        android:id="@+id/self_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_self_hotspot"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#cc000000"/>

    <TextView
        android:id="@+id/create_self_hotspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:text="@string/self_hotspot_init"
        android:textSize="16sp"
        android:textColor="#cc000000"/>
</LinearLayout>
