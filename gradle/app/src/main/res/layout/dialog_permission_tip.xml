<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_magin_left"
        android:layout_marginLeft="@dimen/info_magin_left"
        android:layout_marginRight="@dimen/info_magin_left">
        <amigoui.widget.AmigoTextView
	        android:id="@+id/tv_tip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:textSize="16sp"
			android:textColor="#cc000000"/>
    </ScrollView>
    <amigoui.widget.AmigoCheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/info_magin_left"
        android:checked="true"
        android:text="@string/never_mind" />

</LinearLayout>